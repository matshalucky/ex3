
@{
    ViewBag.Title = "Map";
}



<html>
<head>
    <link href="~/Image/StyleSheet1.css" rel="stylesheet" type="text/css"/>
</head>
<body>
	<canvas id="canvas" style="width:100%; height:100%;" ></canvas>
	<script>
		var c1 = document.getElementById("canvas");
		var context1 = c1.getContext("2d");
		context1.canvas.width = window.innerWidth;
		context1.canvas.height = window.innerHeight;
		
		var lon = (@ViewBag.lon + 180) * (window.innerWidth / 360);
		var lat = (@ViewBag.lat + 90) * (window.innerHeight / 180);
        drawCircle(lon, lat, context1);

		


	</script>
	
</body>
</html>